<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/mColorWhite"
    android:orientation="horizontal"
    android:padding="8dp">
    <ImageView
        android:id="@+id/ivOrderItemDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Chuá»™t"
                android:textColor="@color/mColorBlack"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="300.000 VND"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/ivOrderItemMinus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_minus"
        android:layout_gravity="center"
        android:tint="@color/colorAccent"/>
    <EditText
        android:id="@+id/txtOrderItemNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3"
        android:textSize="25sp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"/>
    <ImageView
        android:id="@+id/ivOrderItemPlus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_plus"
        android:tint="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"/>
</LinearLayout>